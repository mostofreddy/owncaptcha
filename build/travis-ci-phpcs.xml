<?xml version="1.0"?>
<ruleset name="Custom PEAR">
    <description>The PEAR standard, but warnings at 140 chars.</description>

    <!-- Include the whole PEAR standard -->
    <rule ref="PEAR"/>

    <!-- Lines can be no longer than 140 chars -->
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="140"/>
        </properties>
    </rule>
</ruleset>
